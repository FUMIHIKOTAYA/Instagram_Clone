<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <div class="container-fluid">
        <header>
          <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                  <span class="sr-only">IG Clone</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">IG Clone</span>
              </div>
              <div id="gnavi" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
    <% if logged_in? %>
      <li><%= link_to %q(プロファイル), user_path(current_user.id) %></li>
      <li><%= link_to %q(投稿一覧), pictures_path %></li>
      <li><%= link_to %q(ログアウト), session_path(current_user.id), method: :delete %></li>
    <% else %>
      <li><%= link_to %q(新規登録), new_user_path %></li>
      <li><%= link_to %q(ログイン), new_session_path %></li>
    <% end %>
  </ul>
</div>
</div>
</nav>
</header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  </div>
    <footer>
      <small>&copy;2020 IG Clone.</small>
    </footer>
</div>
</body>
</html>
