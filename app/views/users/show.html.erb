<h1><%= @user.name %>さんのページ</h1>

<div class="user_image">
  <% if @user.image.present? %>
    <%= image_tag @user.image.url %>
  <% end %>
</div>

<div class="user_profile">
  <h3><%= @user.name %></h3>
  <p><%= @user.profile %></p>
</div>
<br>
<% if @user.id == current_user.try(:id) %>
<%= link_to %q(プロフィール編集), edit_user_path, class: "btn btn-info" %>
<br>
<br>
<%= link_to %q(お気に入り一覧へ), favorites_path, class: "btn btn-info"  %>
<% end %>
<br>
<br>
<%= link_to %q(投稿一覧へ), pictures_path, class: "btn btn-primary" %>
